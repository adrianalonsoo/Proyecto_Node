import express from 'express'
import { Server } from "socket.io"
import path from 'path'
import { fileURLToPath } from 'url'

const __filename = fileURLToPath(import.meta.url)
const __dirname = path.dirname(__filename)

const PORT = process.env.PORT || 3500
const ADMIN = "Admin"

const app = express()

app.use(express.static(path.join(__dirname, "public")))

const expressServer = app.listen(PORT, () => {
    console.log(`el puerto es ${PORT}`)
})

// state 
const UsersState = {
    users: [],
    setUsers: function (newUsersArray) {
        this.users = newUsersArray
    }
}

const io = new Server(expressServer, {
    cors: {
        origin: process.env.NODE_ENV === "production" ? false : ["http://localhost:5500", "http://127.0.0.1:5500"]
    }
})

io.on('connection', socket => {
    console.log(`User ${socket.id} connected`)

    // solo para el usuario
    socket.emit('message', buildMsg(ADMIN, "chatea ahora!"))

    socket.on('enterRoom', ({ name, room }) => {

        // salir de la sala anterior
        const prevRoom = getUser(socket.id)?.room

        if (prevRoom) {
            socket.leave(prevRoom)
            io.to(prevRoom).emit('message', buildMsg(ADMIN, `${name} se ha desconectadp`))
        }

        const user = activateUser(socket.id, name, room)

        // actualizar el estado para saber si ha salido de la sala
        if (prevRoom) {
            io.to(prevRoom).emit('userList', {
                users: getUsersInRoom(prevRoom)
            })
        }

        // sala
        socket.join(user.room)

        //mensaje para el usuario
        socket.emit('message', buildMsg(ADMIN, `Has podido emtrar en la sala ${user.room}`))

        // mensaje cada vez que se une alguien
        socket.broadcast.to(user.room).emit('message', buildMsg(ADMIN, `${user.name} ha entrado a la sala`))

        // actualizar los usuarios de la sala
        io.to(user.room).emit('userList', {
            users: getUsersInRoom(user.room)
        })

        // actualiza las rooms
        io.emit('roomList', {
            rooms: getAllActiveRooms()
        })
    })

    // cuando el usuario se desconecta
    socket.on('disconnect', () => {
        const user = getUser(socket.id)
        userLeavesApp(socket.id)

        if (user) {
            io.to(user.room).emit('message', buildMsg(ADMIN, `${user.name} ha salido`))

            io.to(user.room).emit('userList', {
                users: getUsersInRoom(user.room)
            })

            io.emit('roomList', {
                rooms: getAllActiveRooms()
            })
        }

        console.log(`User ${socket.id} disconnected`)
    })

    // mensaje
    socket.on('message', ({ name, text }) => {
        const room = getUser(socket.id)?.room
        if (room) {
            io.to(room).emit('message', buildMsg(name, text))
        }
    })

    // actividad
    socket.on('activity', (name) => {
        const room = getUser(socket.id)?.room
        if (room) {
            socket.broadcast.to(room).emit('activity', name)
        }
    })
})

//crear un mensaje 
function buildMsg(name, text) {
    return {
        name,
        text,
        // para poner la fecha de los mensajes
        time: new Intl.DateTimeFormat('default', {
            hour: 'numeric',
            minute: 'numeric',
            second: 'numeric'
        }).format(new Date())
    }
}

// funciones
function activateUser(id, name, room) {
    const user = { id, name, room }
    UsersState.setUsers([
        ...UsersState.users.filter(user => user.id !== id),
        user
    ])
    return user
}

//funcion cuando el usuario sale
function userLeavesApp(id) {
    UsersState.setUsers(
        UsersState.users.filter(user => user.id !== id)
    )
}

//obtener el usuario
function getUser(id) {
    return UsersState.users.find(user => user.id === id)
}
//obtener los usuarios de la sala
function getUsersInRoom(room) {
    return UsersState.users.filter(user => user.room === room)
}

//todas las salas que hay
function getAllActiveRooms() {
    return Array.from(new Set(UsersState.users.map(user => user.room)))
}